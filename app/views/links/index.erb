<link rel="stylesheet" type="text/css" href="/style.css">
<h1> Links </h1>

<ul id='links'>
  <% @links.each do |link| %>
    <li>
      Title: <%= link.title %>
      URL:   <%= link.url   %>
      Tags:
      <% link.tags.each do |tag| %>
        <%= tag.tag%>
      <% end %>
    </li>
  <% end %>
</ul>

<a href="/links/new" class="button">Add link</a>